{
  "name": "kabira-mobility-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Kabira Mobility Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "bun run --filter @kabira/web dev",
    "dev:cms": "bun run --filter @kabira/cms dev",
    "dev": "bun run dev:web & bun run dev:cms",
    "build:web": "bun run --filter @kabira/web build",
    "build:cms": "bun run --filter @kabira/cms build",
    "build": "bun run build:cms && bun run build:web",
    "start:web": "bun run --filter @kabira/web start",
    "start:cms": "bun run --filter @kabira/cms start",
    "lint": "bun run lint:cms && bun run lint:web",
    "lint:web": "bun run --filter @kabira/web lint",
    "lint:cms": "bun run --filter @kabira/cms lint",
    "format": "prettier --write \"apps/**/*.{js,jsx,ts,tsx,json,css,md}\" \"packages/**/*.{js,jsx,ts,tsx,json,css,md}\" \"*.{js,json,md}\" --ignore-path .gitignore"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.16.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "bun": ">= 1.0.0"
  },
  "dependencies": {

  }
}